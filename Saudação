hora = input('Olá, que horas são? ')
erro = f'{hora} não é uma hora válida'
if hora.isnumeric():
    hora = int(hora)
    if hora <= 11:
        print('Bom dia')
    elif hora >=12 and hora <=17:
        print('Boa tarde.')
    elif hora >=18 and hora <=23:
        print('Boa noite')
    else:
        print(erro)
else:
    print(erro)
